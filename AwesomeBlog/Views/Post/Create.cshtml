@model AwesomeBlog.Models.blogstuuf

@{
    ViewBag.Title = "Create New Post";
    Layout = "~/Views/Shared/_layoutDashboard.cshtml";
}

<h2>Create New Post</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        <div class="editor-label">
            @Html.LabelFor(model => model.Image)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Image)
            @Html.ValidationMessageFor(model => model.Image)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DatePosted)
        </div>
        <div class="editor-field">
            @Html.TextBox("DatePosted", DateTime.Now.ToShortDateString())
            @Html.ValidationMessageFor(model => model.DatePosted)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.PosterName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PosterName)
            @Html.ValidationMessageFor(model => model.PosterName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Message)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Message, 10, 50, new object { })
            @Html.ValidationMessageFor(model => model.Message)
        </div>

        @Html.Hidden("viewCount", 0)
        @Html.Hidden("Rating", 0)

        <div class="editor-label">
            @Html.LabelFor(model => model.tags)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.tags)
            @Html.ValidationMessageFor(model => model.tags)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div class="links">
    @Html.ActionLink("Back to List", "Index", "Post")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
